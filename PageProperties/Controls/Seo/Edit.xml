<control xmlns:def="Definition" xmlns="http://schemas.sitecore.net/Visual-Studio-Intellisense">
    <Seo.Edit>
        <FormDialog ID="Dialog" Icon="Applications/32x32/document_new.png" Header="Edit Sep"
      Text="Select the item that you want to insert. You must give the item a name." OKButton="Save">

            <CodeBeside Type="GNReSound.Bl.Controls.Seo.Edit,GNReSound.bl"/>

            <Script>
                function GetInput(){
                    var test = "";
                    $('#InputFields input').each(function(){
                        test = test + "," + $(this).val();
                    });
                }
            </Script>

            <GridPanel Width="100%" Height="100%" Style="table-layout:fixed">
                <GridPanel Width="100%" Columns="2">
                    <Border Padding="0px 4px 0px 0px" Style="white-space:nowrap;" GridPanel.Align="right" NoWrap="true">
                        <Literal Text="Description:"/>
                    </Border>
                    <Edit ID="Description" Width="100%" GridPanel.Width="100%" Height="200" />
                </GridPanel>
                
                <Scrollbox ID="InputFields" Width="100%" Height="100%" Background="white" Border="1px inset" Padding="0" GridPanel.Height="100%" />

            </GridPanel>

        </FormDialog>
