<?xml version="1.0" encoding="utf-8" ?>
<control xmlns:def="Definition" xmlns="http://schemas.sitecore.net/Visual-Studio-Intellisense">
    <PageProperties.Edit>
        <FormDialog ID="Dialog" Icon="Applications/32x32/document_new.png" Header="Edit Page Properties"
      Text="Edit page properties, not visible to the end user" OKButton="Save">

            <CodeBeside Type="PageProperties.Controls.Edit,PageProperties"/>

          <style>
            .wrapper {
            margin: 20px;
            position: relative;
            }
            .wrapper label{
            display:block;
            }
            .wrapper input {
            width: 90%;
            padding: 3px 2%;
            margin-bottom: 10px;
            display:block;
            }

            .wrapper input[type="checkbox"] {
            width: 13px
            }

            .wrapper h2 {
            padding: 0;
            margin: 0 0 15px;
            }


          </style>

            <GridPanel Width="100%" Height="100%" Style="table-layout:fixed">
                <GridPanel Width="100%" Columns="2">
                    <Border Padding="0px 4px 0px 0px" Style="white-space:nowrap;" GridPanel.Align="right" NoWrap="true">
                        <Literal Text="Description:"/>
                    </Border>
                </GridPanel>
                
                <Scrollbox ID="InputFields" Width="100%" Height="100%" Background="white" Border="1px inset" Padding="0" GridPanel.Height="100%" />

            </GridPanel>

        </FormDialog>
    </PageProperties.Edit>
</control>
